{
    "name": "azt3k/abc-silverstripe-mailer",
    "description": "Library that adds smtp mail support to Silverstripe",
    "license": "BSD",
    "type": "silverstripe-vendormodule",
    "authors": [
        {
            "name": "Aaron Latham-Ilari",
            "email": "az@dev-io.us"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php"                           : ">=7.0",
        "composer/installers"           : ">=1.0",
        "silverstripe/framework"        : ">=4.0",
        "phpmailer/phpmailer"           : "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit"               : "*@stable",
        "silverstripe/sqlite3"          : "*"
    },
    "extra": {
        "installer-paths": {
            "vendor/{$name}": [
                "phpmailer/phpmailer"
            ]
        }
    }
}
